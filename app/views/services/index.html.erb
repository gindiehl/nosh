<% if current_user %>
  <% if current_user.admin === true %>
  <p>Hello Admin!</p>
  <%= link_to "Add a New Service", new_service_path %>
  <% end %>
<% end %>  


<% if @services.any? %>
  <% @services.each do |service| %>
    <ul>
      <li><%= link_to service.name, service_path(service) %></li>
    </ul>
  <% end %>
<% else %>
  <h4>There are no services added yet!</h4>
<% end %>
