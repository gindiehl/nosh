<%= render('layouts/errors', :object => @review) %>

<%= form_for [@service, @review] do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.label :content, "Add your review below" %>
  <%= f.text_area :content %>
  <%= f.label :author %><br>
  <%= f.text_field :author %><br>
  <%= f.submit "Submit Review" %>
<% end %>
